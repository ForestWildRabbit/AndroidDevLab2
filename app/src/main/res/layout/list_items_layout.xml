
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/text_view"
    app:layout_constraintLeft_toLeftOf="@+id/text_view"
    android:background="@color/shopping_list_bg_color"
    android:layout_marginTop="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/item_bg_color"
        android:textColor="@color/text_color"
        android:text="Item"
        android:minWidth="180sp"
        android:minHeight="24sp"
        android:textSize="24sp"
        android:id="@+id/list_item_id"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/item_bg_color"
            android:textColor="@color/text_color"
            android:minWidth="180sp"
            android:minHeight="24sp"
            android:textSize="24sp"
            android:id="@+id/edit_item_id"
            android:visibility="gone"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_button_id"
        android:text="@string/edit_button_text"
        android:minHeight="24sp"
        android:textSize="24sp"
        android:background="@color/item_bg_color"
        android:textColor="@color/text_color"
        android:layout_marginStart="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/list_item_id"
        android:onClick="editItem"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_button_id"
        android:text="@string/delete_button_text"
        android:minHeight="24sp"
        android:textSize="24sp"
        android:background="@color/item_bg_color"
        android:textColor="@color/text_color"
        android:layout_marginStart="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/list_item_id"
        android:onClick="deleteItem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_button_id"
        android:text="@string/save_button_text"
        android:minHeight="24sp"
        android:textSize="24sp"
        android:background="@color/item_bg_color"
        android:textColor="@color/text_color"
        android:layout_marginStart="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/list_item_id"
        android:onClick="saveItem"/>

</LinearLayout>